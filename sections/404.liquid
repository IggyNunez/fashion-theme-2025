{{ 'section-404.css' | asset_url | stylesheet_tag }}

<div class="page-404 section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="page-404__content">
      <h1 class="page-404__title">
        {{ section.settings.title | default: '404' }}
      </h1>
      <p class="page-404__subtext">
        {{ section.settings.subtext | default: 'Page not found' }}
      </p>
      <a href="{{ routes.root_url }}" class="button">
        {{ section.settings.button_label | default: 'Continue shopping' }}
      </a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "404 page",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "404",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subtext",
      "default": "Page not found",
      "label": "Subtext"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Continue shopping",
      "label": "Button label"
    }
  ]
}
{% endschema %}
