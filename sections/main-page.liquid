{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

<div class="page-width section-{{ section.id }}-padding">
  <h1 class="main-page-title page-title">
    {{ page.title | escape }}
  </h1>
  <div class="rte">
    {{ page.content }}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_title",
      "default": true,
      "label": "Show page title"
    },
    {
      "type": "select",
      "id": "page_width",
      "options": [
        {
          "value": "narrow",
          "label": "Narrow"
        },
        {
          "value": "standard",
          "label": "Standard"
        },
        {
          "value": "wide",
          "label": "Wide"
        }
      ],
      "default": "standard",
      "label": "Page width"
    }
  ]
}
{% endschema %}
