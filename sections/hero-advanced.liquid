{% liquid
  assign media_count = 0
  if section.settings.image_1 != blank and section.settings.image_2 != blank
    assign media_width_desktop = 100 | divided_by: 2 | append: 'vw'
  else
    assign media_width_desktop = '100vw'
  endif
  assign media_width_mobile = '100vw'
  assign sizes = '(min-width: 750px) ' | append: media_width_desktop | append: ', ' | append: media_width_mobile
  assign widths = '375, 750, 1100, 1500, 1780, 2000, 3000, 3840'

  assign has_image_1 = false
  assign has_image_2 = false
  assign has_video_1 = false
  assign has_video_2 = false
  assign has_media = false
  
  if section.settings.image_1 != blank and section.settings.media_type_1 == 'image'
    assign has_image_1 = true
    assign media_count = media_count | plus: 1
  endif
  if section.settings.image_2 != blank and section.settings.media_type_2 == 'image'
    assign has_image_2 = true
    assign media_count = media_count | plus: 1
  endif
  if section.settings.video_1 != blank and section.settings.media_type_1 == 'video'
    assign has_video_1 = true
    assign media_count = media_count | plus: 1
  endif
  if section.settings.video_2 != blank and section.settings.media_type_2 == 'video'
    assign has_video_2 = true
    assign media_count = media_count | plus: 1
  endif
  
  if has_image_1 or has_image_2 or has_video_1 or has_video_2
    assign has_media = true
  endif

  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
%}

{{ 'section-hero-advanced.css' | asset_url | stylesheet_tag }}

<div
  id="Hero-{{ section.id }}"
  class="hero-advanced color-{{ section.settings.color_scheme }}"
  style="
    --hero-min-height: {% if section.settings.section_height == 'custom' %}{{ section.settings.section_height_custom }}vh{% elsif section.settings.section_height == 'full' %}100vh{% else %}var(--section-height-{{ section.settings.section_height }}){% endif %};
    --hero-overlay-opacity: {{ section.settings.overlay_opacity }}%;
    --hero-content-gap: {{ section.settings.gap }}px;
    --hero-padding-top: {{ section.settings.padding_top }}px;
    --hero-padding-bottom: {{ section.settings.padding_bottom }}px;
  "
>
  <div class="hero-advanced__container section-{{ section.settings.section_width }}">
    {%- if section.settings.link != blank -%}
      <a
        href="{{ section.settings.link }}"
        class="hero-advanced__link"
        {% if section.settings.open_in_new_tab %}
          target="_blank" rel="noopener"
        {% endif %}
        aria-label="{{ section.settings.link_label | default: 'Hero link' }}"
      ></a>
    {%- endif -%}
    
    <!-- Media Wrapper -->
    <div class="hero-advanced__media-wrapper" style="--media-count: {{ media_count }};">
      {%- if section.settings.enable_overlay -%}
        <div class="hero-advanced__overlay" style="background: {{ section.settings.overlay_color }};"></div>
      {%- endif -%}
      
      {%- if has_image_1 -%}
        {{ section.settings.image_1 | image_url: width: 3840 | image_tag:
          widths: widths,
          sizes: sizes,
          loading: 'eager',
          fetchpriority: fetch_priority,
          class: 'hero-advanced__image',
          alt: section.settings.image_1.alt | escape
        }}
      {%- endif -%}
      
      {%- if has_video_1 -%}
        <div class="hero-advanced__video-wrapper">
          {{ section.settings.video_1 | video_tag:
            autoplay: true,
            loop: true,
            controls: false,
            muted: true,
            class: 'hero-advanced__video'
          }}
        </div>
      {%- endif -%}
      
      {%- if has_image_2 -%}
        {{ section.settings.image_2 | image_url: width: 3840 | image_tag:
          widths: widths,
          sizes: sizes,
          loading: 'lazy',
          class: 'hero-advanced__image',
          alt: section.settings.image_2.alt | escape
        }}
      {%- endif -%}
      
      {%- if has_video_2 -%}
        <div class="hero-advanced__video-wrapper">
          {{ section.settings.video_2 | video_tag:
            autoplay: true,
            loop: true,
            controls: false,
            muted: true,
            class: 'hero-advanced__video'
          }}
        </div>
      {%- endif -%}
      
      {%- if has_media == false -%}
        {{ 'hero-apparel-1' | placeholder_svg_tag: 'hero-advanced__placeholder' }}
      {%- endif -%}
    </div>
    
    <!-- Content Wrapper -->
    <div class="hero-advanced__content-wrapper layout-{{ section.settings.content_layout }} align-{{ section.settings.content_alignment }} position-{{ section.settings.content_position }}">
      <div class="hero-advanced__content">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'heading' -%}
              <{{ block.settings.heading_tag }} 
                class="hero-advanced__heading heading-{{ block.settings.heading_size }}"
                style="
                  --heading-color: {{ block.settings.text_color }};
                  --heading-font: {{ block.settings.font_family }};
                  --heading-weight: {{ block.settings.font_weight }};
                  --heading-spacing: {{ block.settings.letter_spacing }}em;
                  --heading-transform: {{ block.settings.text_transform }};
                "
                {{ block.shopify_attributes }}
              >
                {{ block.settings.heading }}
              </{{ block.settings.heading_tag }}>
              
            {%- when 'subheading' -%}
              <p 
                class="hero-advanced__subheading"
                style="
                  --subheading-color: {{ block.settings.text_color }};
                  --subheading-size: {{ block.settings.font_size }}rem;
                  --subheading-max-width: {{ block.settings.max_width }}ch;
                "
                {{ block.shopify_attributes }}
              >
                {{ block.settings.text }}
              </p>
              
            {%- when 'button_group' -%}
              <div class="hero-advanced__buttons" {{ block.shopify_attributes }}>
                {%- if block.settings.button_label_1 != blank -%}
                  <a
                    href="{{ block.settings.button_link_1 | default: '#' }}"
                    class="button button--{{ block.settings.button_style_1 }}"
                    {% if block.settings.button_link_1 == blank %}
                      role="link" aria-disabled="true"
                    {% endif %}
                  >
                    {{ block.settings.button_label_1 }}
                  </a>
                {%- endif -%}
                
                {%- if block.settings.button_label_2 != blank -%}
                  <a
                    href="{{ block.settings.button_link_2 | default: '#' }}"
                    class="button button--{{ block.settings.button_style_2 }}"
                    {% if block.settings.button_link_2 == blank %}
                      role="link" aria-disabled="true"
                    {% endif %}
                  >
                    {{ block.settings.button_label_2 }}
                  </a>
                {%- endif -%}
              </div>
              
            {%- when 'rich_text' -%}
              <div 
                class="hero-advanced__richtext rte"
                style="
                  --text-color: {{ block.settings.text_color }};
                  --text-size: {{ block.settings.font_size }}rem;
                  --text-max-width: {{ block.settings.max_width }}ch;
                "
                {{ block.shopify_attributes }}
              >
                {{ block.settings.text }}
              </div>
              
            {%- when 'image' -%}
              {%- if block.settings.image != blank -%}
                <div class="hero-advanced__content-image" style="max-width: {{ block.settings.image_width }}px;" {{ block.shopify_attributes }}>
                  {{ block.settings.image | image_url: width: 600 | image_tag:
                    widths: '200, 400, 600',
                    loading: 'lazy',
                    alt: block.settings.image.alt | escape
                  }}
                </div>
              {%- endif -%}
              
            {%- when 'spacer' -%}
              <div 
                class="hero-advanced__spacer" 
                style="height: {{ block.settings.height }}px;"
                {{ block.shopify_attributes }}
              ></div>
              
            {%- when 'countdown' -%}
              <div 
                class="hero-advanced__countdown"
                data-date="{{ block.settings.countdown_date }}"
                {{ block.shopify_attributes }}
              >
                <div class="countdown__item">
                  <span class="countdown__value" data-days>00</span>
                  <span class="countdown__label">{{ 'general.countdown.days' | t }}</span>
                </div>
                <div class="countdown__item">
                  <span class="countdown__value" data-hours>00</span>
                  <span class="countdown__label">{{ 'general.countdown.hours' | t }}</span>
                </div>
                <div class="countdown__item">
                  <span class="countdown__value" data-minutes>00</span>
                  <span class="countdown__label">{{ 'general.countdown.minutes' | t }}</span>
                </div>
                <div class="countdown__item">
                  <span class="countdown__value" data-seconds>00</span>
                  <span class="countdown__label">{{ 'general.countdown.seconds' | t }}</span>
                </div>
              </div>
              <script src="{{ 'countdown.js' | asset_url }}" defer></script>
              
            {%- when '@app' -%}
              {% render block %}
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

