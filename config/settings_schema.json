[
  {
    "name": "theme_info",
    "theme_name": "Fashion Theme 2025",
    "theme_version": "1.0.0",
    "theme_author": "Your Team",
    "theme_documentation_url": "https://docs.yoursite.com",
    "theme_support_email": "support@yoursite.com"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Primary colors"
      },
      {
        "type": "color",
        "id": "colors_solid_button_labels",
        "default": "#FFFFFF",
        "label": "Button text",
        "info": "Applies to primary buttons"
      },
      {
        "type": "color",
        "id": "colors_accent_1",
        "default": "#000000",
        "label": "Accent 1",
        "info": "Primary brand color"
      },
      {
        "type": "color",
        "id": "colors_accent_2",
        "default": "#334FB4",
        "label": "Accent 2",
        "info": "Secondary brand color"
      },
      {
        "type": "color",
        "id": "colors_text",
        "default": "#121212",
        "label": "Text"
      },
      {
        "type": "color",
        "id": "colors_outline_button_labels",
        "default": "#121212",
        "label": "Outlined button text"
      },
      {
        "type": "color",
        "id": "colors_background_1",
        "default": "#FFFFFF",
        "label": "Background 1"
      },
      {
        "type": "color",
        "id": "colors_background_2",
        "default": "#F3F3F3",
        "label": "Background 2"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "assistant_n4",
        "label": "Font",
        "info": "System fonts provide faster loading"
      },
      {
        "type": "range",
        "id": "heading_scale",
        "min": 100,
        "max": 150,
        "step": 5,
        "unit": "%",
        "label": "Heading size scale",
        "default": 105
      },
      {
        "type": "header",
        "content": "Body"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "assistant_n4",
        "label": "Font"
      },
      {
        "type": "range",
        "id": "body_scale",
        "min": 100,
        "max": 130,
        "step": 5,
        "unit": "%",
        "label": "Body size scale",
        "default": 100
      }
    ]
  },
  {
    "name": "Fashion settings",
    "settings": [
      {
        "type": "header",
        "content": "Product display"
      },
      {
        "type": "checkbox",
        "id": "enable_color_swatches",
        "label": "Enable color swatches",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_size_chart",
        "label": "Enable size charts",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_quick_shop",
        "label": "Enable quick shop",
        "default": true,
        "info": "Allow adding to cart from collection pages"
      },
      {
        "type": "checkbox",
        "id": "enable_wishlist",
        "label": "Enable wishlist",
        "default": true
      },
      {
        "type": "header",
        "content": "Product badges"
      },
      {
        "type": "checkbox",
        "id": "show_sale_badge",
        "label": "Show sale badge",
        "default": true
      },
      {
        "type": "text",
        "id": "new_badge_days",
        "label": "Days to show 'New' badge",
        "default": "14",
        "info": "Number of days after product creation"
      },
      {
        "type": "checkbox",
        "id": "show_sold_out_badge",
        "label": "Show sold out badge",
        "default": true
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "header",
        "content": "Social accounts"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram",
        "info": "https://instagram.com/yourhandle"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook"
      },
      {
        "type": "text",
        "id": "social_pinterest_link",
        "label": "Pinterest"
      },
      {
        "type": "text",
        "id": "social_tiktok_link",
        "label": "TikTok"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "YouTube"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
        "options": [
          {
            "value": "drawer",
            "label": "Drawer"
          },
          {
            "value": "page",
            "label": "Page"
          },
          {
            "value": "notification",
            "label": "Notification"
          }
        ],
        "default": "drawer",
        "label": "Cart type"
      },
      {
        "type": "checkbox",
        "id": "show_vendor",
        "label": "Show product vendor",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "show_cart_note",
        "label": "Enable cart note",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "cart_drawer_free_shipping",
        "label": "Show free shipping progress",
        "default": true
      },
      {
        "type": "text",
        "id": "free_shipping_threshold",
        "label": "Free shipping threshold",
        "default": "100",
        "info": "Amount for free shipping in store currency"
      }
    ]
  }
]