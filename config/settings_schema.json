[
  {
    "name": "theme_info",
    "theme_name": "Fashion Theme 2025",
    "theme_version": "1.0.0",
    "theme_author": "Your Store",
    "theme_documentation_url": "https://help.shopify.com/",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Primary colors"
      },
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary color",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "color_secondary",
        "label": "Secondary color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "color_accent",
        "label": "Accent color",
        "default": "#ff6b6b"
      },
      {
        "type": "header",
        "content": "Background colors"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Background",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "color_background_secondary",
        "label": "Secondary background",
        "default": "#f5f5f5"
      },
      {
        "type": "header",
        "content": "Text colors"
      },
      {
        "type": "color",
        "id": "color_text_primary",
        "label": "Primary text",
        "default": "#212121"
      },
      {
        "type": "color",
        "id": "color_text_secondary",
        "label": "Secondary text",
        "default": "#757575"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "font_picker",
        "id": "font_heading",
        "label": "Font",
        "default": "helvetica_n4",
        "info": "Selecting a different font can affect the speed of your store."
      },
      {
        "type": "range",
        "id": "font_heading_scale",
        "min": 80,
        "max": 130,
        "step": 5,
        "unit": "%",
        "label": "Font size scale",
        "default": 100
      },
      {
        "type": "header",
        "content": "Body text"
      },
      {
        "type": "font_picker",
        "id": "font_body",
        "label": "Font",
        "default": "helvetica_n4",
        "info": "Selecting a different font can affect the speed of your store."
      },
      {
        "type": "range",
        "id": "font_body_scale",
        "min": 80,
        "max": 130,
        "step": 5,
        "unit": "%",
        "label": "Font size scale",
        "default": 100
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "range",
        "id": "page_width",
        "min": 1200,
        "max": 1600,
        "step": 20,
        "unit": "px",
        "label": "Page width",
        "default": 1440
      },
      {
        "type": "range",
        "id": "grid_gap",
        "min": 10,
        "max": 50,
        "step": 5,
        "unit": "px",
        "label": "Grid gap",
        "default": 20
      },
      {
        "type": "header",
        "content": "Spacing"
      },
      {
        "type": "range",
        "id": "section_padding_top",
        "min": 0,
        "max": 100,
        "step": 10,
        "unit": "px",
        "label": "Section padding top",
        "default": 40
      },
      {
        "type": "range",
        "id": "section_padding_bottom",
        "min": 0,
        "max": 100,
        "step": 10,
        "unit": "px",
        "label": "Section padding bottom",
        "default": 40
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter",
        "info": "https://twitter.com/yourstore"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook",
        "info": "https://facebook.com/yourstore"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram",
        "info": "https://instagram.com/yourstore"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "YouTube",
        "info": "https://youtube.com/yourstore"
      },
      {
        "type": "text",
        "id": "social_pinterest_link",
        "label": "Pinterest",
        "info": "https://pinterest.com/yourstore"
      },
      {
        "type": "text",
        "id": "social_tiktok_link",
        "label": "TikTok",
        "info": "https://tiktok.com/@yourstore"
      }
    ]
  },
  {
    "name": "Product cards",
    "settings": [
      {
        "type": "checkbox",
        "id": "card_show_vendor",
        "label": "Show vendor",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "card_show_rating",
        "label": "Show product rating",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "card_show_secondary_image",
        "label": "Show second image on hover",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "card_show_quick_add",
        "label": "Enable quick add button",
        "default": true
      },
      {
        "type": "select",
        "id": "card_image_ratio",
        "label": "Image aspect ratio",
        "options": [
          {
            "value": "square",
            "label": "Square (1:1)"
          },
          {
            "value": "portrait",
            "label": "Portrait (3:4)"
          },
          {
            "value": "landscape",
            "label": "Landscape (4:3)"
          }
        ],
        "default": "portrait"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
        "label": "Cart type",
        "options": [
          {
            "value": "page",
            "label": "Page"
          },
          {
            "value": "drawer",
            "label": "Drawer"
          },
          {
            "value": "popup",
            "label": "Popup notification"
          }
        ],
        "default": "drawer"
      },
      {
        "type": "checkbox",
        "id": "cart_show_note",
        "label": "Enable order notes",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "cart_show_shipping_calculator",
        "label": "Show shipping calculator",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "cart_show_free_shipping_bar",
        "label": "Show free shipping progress bar",
        "default": true
      },
      {
        "type": "text",
        "id": "cart_free_shipping_threshold",
        "label": "Free shipping threshold",
        "default": "100",
        "info": "Enter amount in your store's currency"
      }
    ]
  },
  {
    "name": "Search",
    "settings": [
      {
        "type": "checkbox",
        "id": "search_enable_predictive",
        "label": "Enable predictive search",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "search_show_vendor",
        "label": "Show vendor in results",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "search_show_price",
        "label": "Show price in results",
        "default": true
      }
    ]
  },
  {
    "name": "Currency format",
    "settings": [
      {
        "type": "header",
        "content": "Currency codes"
      },
      {
        "type": "checkbox",
        "id": "currency_show_codes",
        "label": "Show currency codes",
        "default": true
      }
    ]
  },
  {
    "name": "Animations",
    "settings": [
      {
        "type": "checkbox",
        "id": "animations_enable",
        "label": "Enable animations",
        "default": true,
        "info": "Turn off to improve performance and accessibility"
      },
      {
        "type": "select",
        "id": "animations_type",
        "label": "Animation type",
        "options": [
          {
            "value": "fade",
            "label": "Fade"
          },
          {
            "value": "slide",
            "label": "Slide"
          },
          {
            "value": "zoom",
            "label": "Zoom"
          }
        ],
        "default": "fade"
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "Will be scaled down to 32 x 32px"
      }
    ]
  },
  {
    "name": "SEO",
    "settings": [
      {
        "type": "text",
        "id": "seo_home_title",
        "label": "Homepage title",
        "default": "Fashion Theme 2025",
        "info": "Used for SEO and browser tabs"
      },
      {
        "type": "textarea",
        "id": "seo_home_description",
        "label": "Homepage meta description",
        "info": "Used by search engines. Maximum 160 characters."
      }
    ]
  },
  {
    "name": "Color schemes",
    "settings": [
      {
        "type": "header",
        "content": "Scheme 1"
      },
      {
