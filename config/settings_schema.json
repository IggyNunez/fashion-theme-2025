      },
      {
        "type": "color",
        "id": "scheme_2_background",
        "label": "Background",
        "default": "#f5f5f5"
      },
      {
        "type": "color",
        "id": "scheme_2_text",
        "label": "Text",
        "default": "#212121"
      },
      {
        "type": "color",
        "id": "scheme_2_accent",
        "label": "Accent",
        "default": "#ff6b6b"
      },
      {
        "type": "header",
        "content": "Inverse scheme"
      },
      {
        "type": "color",
        "id": "scheme_inverse_background",
        "label": "Background",
        "default": "#212121"
      },
      {
        "type": "color",
        "id": "scheme_inverse_text",
        "label": "Text",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "scheme_inverse_accent",
        "label": "Accent",
        "default": "#ff6b6b"
      }
    ]
  }
]
