<nav class="breadcrumb" role="navigation" aria-label="breadcrumbs">
  <ul class="breadcrumb__list">
    <li class="breadcrumb__item">
      <a href="{{ routes.root_url }}" class="breadcrumb__link">
        {{ 'general.breadcrumbs.home' | t }}
      </a>
    </li>

    {%- case template.name -%}
      {%- when 'product' -%}
        {%- if collection -%}
          <li class="breadcrumb__item">
            <a href="{{ collection.url }}" class="breadcrumb__link">{{ collection.title }}</a>
          </li>
        {%- endif -%}
        <li class="breadcrumb__item breadcrumb__item--current" aria-current="page">
          {{ product.title | truncate: 50 }}
        </li>

      {%- when 'collection' -%}
        <li class="breadcrumb__item breadcrumb__item--current" aria-current="page">
          {{ collection.title }}
        </li>

      {%- when 'blog' -%}
        <li class="breadcrumb__item breadcrumb__item--current" aria-current="page">
          {{ blog.title }}
        </li>

      {%- when 'article' -%}
        <li class="breadcrumb__item">
          <a href="{{ blog.url }}" class="breadcrumb__link">{{ blog.title }}</a>
        </li>
        <li class="breadcrumb__item breadcrumb__item--current" aria-current="page">
          {{ article.title | truncate: 50 }}
        </li>

      {%- when 'page' -%}
        <li class="breadcrumb__item breadcrumb__item--current" aria-current="page">
          {{ page.title }}
        </li>

      {%- when 'search' -%}
        <li class="breadcrumb__item breadcrumb__item--current" aria-current="page">
          {{ 'general.search.title' | t }}
        </li>

      {%- when 'cart' -%}
        <li class="breadcrumb__item breadcrumb__item--current" aria-current="page">
          {{ 'templates.cart.title' | t }}
        </li>

      {%- when 'customers/account' -%}
        <li class="breadcrumb__item breadcrumb__item--current" aria-current="page">
          {{ 'customer.account.title' | t }}
        </li>

      {%- when 'customers/login' -%}
        <li class="breadcrumb__item breadcrumb__item--current" aria-current="page">
          {{ 'customer.login.title' | t }}
        </li>

      {%- when 'customers/register' -%}
        <li class="breadcrumb__item breadcrumb__item--current" aria-current="page">
          {{ 'customer.register.title' | t }}
        </li>

      {%- when 'customers/order' -%}
        <li class="breadcrumb__item">
          <a href="{{ routes.account_url }}" class="breadcrumb__link">{{ 'customer.account.title' | t }}</a>
        </li>
        <li class="breadcrumb__item breadcrumb__item--current" aria-current="page">
          {{ 'customer.order.title' | t: name: order.name }}
        </li>

      {%- else -%}
        {%- if current_tags -%}
          <li class="breadcrumb__item breadcrumb__item--current" aria-current="page">
            {{ current_tags | join: ' + ' }}
          </li>
        {%- endif -%}
    {%- endcase -%}
  </ul>
</nav>

<style>
  .breadcrumb {
    margin: var(--spacing-md) 0;
  }
  
  .breadcrumb__list {
    display: flex;
    flex-wrap: wrap;
    list-style: none;
    margin: 0;
    padding: 0;
    font-size: 0.875rem;
  }
  
  .breadcrumb__item {
    display: flex;
    align-items: center;
  }
  
  .breadcrumb__item:not(:last-child)::after {
    content: '/';
    margin: 0 var(--spacing-sm);
    color: var(--color-text-secondary);
  }
  
  .breadcrumb__link {
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color var(--transition-base);
  }
  
  .breadcrumb__link:hover {
    color: var(--color-primary);
  }
  
  .breadcrumb__item--current {
    color: var(--color-text-primary);
    font-weight: var(--font-weight-medium);
  }
</style>
